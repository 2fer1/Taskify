{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "taskify",
  "version": "0.1.0",
  "identifier": "taskify",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "taskify",
        "width": 800,
        "height": 600,
        "minWidth": 500,
        "minHeight": 480,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
